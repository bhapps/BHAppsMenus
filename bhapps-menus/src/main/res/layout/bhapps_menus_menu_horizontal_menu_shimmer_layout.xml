<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="horizontal">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/bhapps_menus_menu_horizontal_menu_parent_item_padding">

        <ImageView
                android:id="@+id/bhapps_menus_menu_horizontal_menu_shimmer_layout_view_group_index_0_icon_placeholder"
                android:layout_width="@dimen/bhapps_menus_menu_horizontal_menu_parent_item_icon_width"
                android:layout_height="@dimen/bhapps_menus_menu_horizontal_menu_parent_item_icon_height"
                android:src="@drawable/bhapps_menus_menu_horizontal_menu_shimmer_circle_view"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/bhapps_menus_menu_horizontal_menu_parent_item_padding"
                android:layout_marginRight="@dimen/bhapps_menus_menu_horizontal_menu_parent_item_padding"
                android:background="@color/bhapps_menus_menu_horizontal_menu_divider_color"
                app:layout_constraintStart_toEndOf="@+id/bhapps_menus_menu_horizontal_menu_shimmer_layout_view_group_index_0_icon_placeholder"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
            android:layout_width="@dimen/bhapps_menus_menu_dimension_1dp"
            android:layout_height="match_parent"
            android:background="@color/bhapps_menus_menu_horizontal_menu_divider_color" />

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/bhapps_menus_menu_horizontal_menu_parent_item_padding">

        <ImageView
                android:id="@+id/bhapps_menus_menu_horizontal_menu_shimmer_layout_view_group_index_1_icon_placeholder"
                android:layout_width="@dimen/bhapps_menus_menu_horizontal_menu_parent_item_icon_width"
                android:layout_height="@dimen/bhapps_menus_menu_horizontal_menu_parent_item_icon_height"
                android:src="@drawable/bhapps_menus_menu_horizontal_menu_shimmer_circle_view"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/bhapps_menus_menu_horizontal_menu_parent_item_padding"
                android:layout_marginRight="@dimen/bhapps_menus_menu_horizontal_menu_parent_item_padding"
                android:background="@color/bhapps_menus_menu_horizontal_menu_divider_color"
                app:layout_constraintStart_toEndOf="@+id/bhapps_menus_menu_horizontal_menu_shimmer_layout_view_group_index_1_icon_placeholder"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
            android:layout_width="@dimen/bhapps_menus_menu_dimension_1dp"
            android:layout_height="match_parent"
            android:background="@color/bhapps_menus_menu_horizontal_menu_divider_color" />

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/bhapps_menus_menu_horizontal_menu_parent_item_padding">

        <ImageView
                android:id="@+id/bhapps_menus_menu_horizontal_menu_shimmer_layout_view_group_index_2_icon_placeholder"
                android:layout_width="@dimen/bhapps_menus_menu_horizontal_menu_parent_item_icon_width"
                android:layout_height="@dimen/bhapps_menus_menu_horizontal_menu_parent_item_icon_height"
                android:src="@drawable/bhapps_menus_menu_horizontal_menu_shimmer_circle_view"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/bhapps_menus_menu_horizontal_menu_parent_item_padding"
                android:layout_marginRight="@dimen/bhapps_menus_menu_horizontal_menu_parent_item_padding"
                android:background="@color/bhapps_menus_menu_horizontal_menu_divider_color"
                app:layout_constraintStart_toEndOf="@+id/bhapps_menus_menu_horizontal_menu_shimmer_layout_view_group_index_2_icon_placeholder"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>